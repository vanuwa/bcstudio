<script>
  window.onscroll = function(ev) {
    if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight - 100) {
      fly();
      console.log('show');
    } else {
      flyReset();
      console.log('hide');

    }
  };
  function fly() {
    var flyDiv = $('.dontclick-fly');
    $('.dontclick-fly').show();
    $('.dontclick-fly').animate({
      left: '23%',
      bottom: '200px'
    }, 2500, 'linear').animate({
      left: '48%',
      bottom: '100px'
    }, 2500, 'linear').animate({
      left: '90%',
      bottom: '50px'
    }, 2500, 'linear', function() {
      $('.dontclick-fly').stop(true, true);
    });
  }

  function flyReset() {
    var flyDiv = $('.dontclick-fly');
    $('.dontclick-fly').hide();
    $('.dontclick-fly').stop(true, true);
    $('.dontclick-fly').css({
      left: '0',
      bottom: '0'
    });
  }
  
</script>
